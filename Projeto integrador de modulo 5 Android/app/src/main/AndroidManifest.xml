<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ===================================================================================== -->
    <!-- |                                    PERMISSÕES                                     | -->
    <!-- ===================================================================================== -->
    <!-- Permite que o aplicativo acesse a internet para se comunicar com APIs e outros serviços. -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Necessária a partir do Android 13 (API 33) para poder enviar notificações ao usuário. -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />


    <!-- ===================================================================================== -->
    <!-- |                                    APLICAÇÃO                                      | -->
    <!-- ===================================================================================== -->
    <application
        android:name=".ProjetoIntegradorApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProjetoIntegradorDeModulo5Android"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!--
            ATENÇÃO SOBRE 'usesCleartextTraffic':
            Esta propriedade como "true" permite que o app se comunique via HTTP (não criptografado).
            É útil para testes em ambiente de desenvolvimento com um servidor local.
            Para a versão de produção do aplicativo, o ideal é definir como "false" por segurança
            e usar uma Configuração de Segurança de Rede (Network Security Config) para permitir
            apenas domínios confiáveis, se necessário.
        -->


        <!-- ===================================================================================== -->
        <!-- |                                    ATIVIDADES (TELAS)                             | -->
        <!-- ===================================================================================== -->

        <!-- Atividade de Splash (Tela de Abertura) -->
        <!-- É a porta de entrada do app (LAUNCHER), por isso 'exported="true"' é obrigatório. -->
        <activity
            android:name=".presentation.ui.activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Atividades Internas do Aplicativo -->
        <!-- 'exported="false"' é uma boa prática de segurança. Garante que estas atividades
             só possam ser iniciadas de dentro do próprio aplicativo. -->
        <activity android:name=".presentation.ui.activity.MainActivity" android:exported="false" />
        <activity android:name=".presentation.ui.activity.LoginPacienteActivity" android:exported="false" />
        <activity android:name=".presentation.ui.activity.LoginFuncionarioActivity" android:exported="false" />
        <activity android:name=".presentation.ui.activity.PacienteDashboardActivity" android:exported="false" />
        <activity android:name=".presentation.ui.activity.RecepcionistaActivity" android:exported="false" />
        <activity android:name=".presentation.ui.activity.ProfissionalSaudeActivity" android:exported="false" />
        <activity android:name=".presentation.ui.activity.ChamarProximoActivity" android:exported="false" />
        <activity android:name=".presentation.ui.activity.AdministradorActivity" android:exported="false" />


        <!-- ===================================================================================== -->
        <!-- |                                     SERVIÇOS                                      | -->
        <!-- ===================================================================================== -->

        <!-- Serviço do Firebase Cloud Messaging (FCM) para receber notificações push. -->
        <service
            android:name=".fcm.MyFirebaseService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/light_blue_bg"
    tools:context=".presentation.ui.activity.SplashActivity">

    <ImageView
        android:id="@+id/clinicLogo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/sgfhazul"
        android:contentDescription="Logo SGFH" />

    <ProgressBar
        android:id="@+id/progressBarSplash"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:indeterminate="true"
        android:visibility="visible" />
</LinearLayout>
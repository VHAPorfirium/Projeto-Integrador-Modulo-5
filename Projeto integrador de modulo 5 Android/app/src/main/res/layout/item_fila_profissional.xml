<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="3dp"
    app:cardCornerRadius="8dp"
    android:layout_marginVertical="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Senha: "
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvItemFilaProfissionalSenha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primary_blue"
                tools:text="A001"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvItemFilaProfissionalStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="AGUARDANDO"
                android:textSize="12sp"
                android:textStyle="italic"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:background="@drawable/status_background_aguardando"
                android:textColor="@color/white"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvItemFilaProfissionalNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Nome Completo do Paciente"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvItemFilaProfissionalEspecialidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Especialidade: ClÃ­nica Geral"
            android:textSize="14sp"
            android:textColor="@color/dark_gray"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvItemFilaProfissionalEspera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Tempo de Espera: 15 min"
            android:textSize="14sp"
            android:textColor="@color/dark_gray"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>